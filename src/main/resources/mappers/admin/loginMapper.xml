<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.UserMapper">

    <!-- 사용자 로그인 쿼리 -->
    <select id="login" parameterType="java.util.Map" resultType="com.sh.User">
        SELECT * FROM users
        WHERE admin_id = #{userId} AND admin_pwd = #{userPassword}
    </select>

</mapper>